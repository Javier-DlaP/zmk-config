#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/mouse.h>

#define DEFAULT 0
#define F_NUM_PAD 1
#define NUM_PAD 2
#define SPECIAL 3

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {

						label = "DEFAULT";
                        bindings = <
   	//,-----------------------------------------------------------------.                        ,-----------------------------------------------------------------.
		  &kp ESC      &kp Q 	  &kp W 	 &kp E 		&kp R 	   &kp T   			        		   &kp Y 	  &kp U  	 &kp I     	&kp O  	   &kp P   &kp BSPC
	//|----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
		  &kp TAB 	   &kp A 	  &kp S 	 &kp D 		&kp F 	   &kp G   	 					  	   &kp H 	  &kp J  	 &kp K      &kp L  	&kp SEMI   &kp LGUI
	//|----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
   		&kp LCTRL      &kp Z 	  &kp X 	 &kp C 		&kp V 	   &kp B   							   &kp N 	  &kp M     &trans 	   &trans 	  &trans  	 &trans
	//|----------+----------+----------+----------+----------+----------+----------|  |----------+----------+----------+----------+----------+----------+----------|
                  								  &kp LSHFT &mo F_NUM_PAD &kp SPACE    &kp ENTER &mo NUM_PAD   &kp RALT
												//`--------------------------------'  `--------------------------------'
                        >;
                };

                f_num_pad_layer {

						label = "F_NUM_PAD";
                        bindings = <
   	//,-----------------------------------------------------------------.                        ,-----------------------------------------------------------------.
		  &bt BT_CLR   &kp F12 	 &kp F7 	&kp F8 	   &kp F9 	  &trans   			        		  &trans	 &trans 	&trans     &trans  	  &trans    &kp DEL
	//|----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
		  &kp TAB  	 &kp F11 	 &kp F4 	&kp F5 	   &kp F6 	  &trans   	 					    &kp LEFT   &kp DOWN  	&kp UP 	&kp RIGHT  	  &trans   &kp LGUI
	//|----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
   		&kp LCTRL    &kp F10 	 &kp F1 	&kp F2 	   &kp F3 	  &trans  							  &trans 	 &trans  	&trans 	   &trans 	  &trans 	 &trans
	//|----------+----------+----------+----------+----------+----------+----------|  |----------+----------+----------+----------+----------+----------+----------|
                  								  	&kp LSHFT 	   &none  &kp SPACE    &kp ENTER &mo SPECIAL   &kp LALT
												//`--------------------------------'  `--------------------------------'
                        >;
                };

                num_pad_layer {
						label = "NUM_PAD";
                        bindings = <
   	//,-----------------------------------------------------------------.                        ,-----------------------------------------------------------------.
		&kp GRAVE  &kp SLASH 	 &kp N7 	&kp N8 	   &kp N9  &kp MINUS   			        		  &trans 	 &trans 	&trans     &trans 	  &bt BT_CLR  	&kp DEL
	//|----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
		 &kp CAPS 	&kp STAR 	 &kp N4 	&kp N5 	   &kp N6 	&kp PLUS   	 					  	  &trans	 &trans  	&trans     &trans  &kp SLASH   &kp LGUI
	//|----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
        &kp LCTRL     &kp N0 	 &kp N1 	&kp N2 	   &kp N3 	 &kp DOT   							  &trans	 &trans  	&trans	   &trans &kp LS(N8) &kp LS(N9)
	//|----------+----------+----------+----------+----------+----------+----------|  |----------+----------+----------+----------+----------+----------+----------|
                  								   &kp LSHFT &mo SPECIAL  &kp SPACE    	&kp ENTER 	   &none   &kp RALT
												//`--------------------------------'  `--------------------------------'
                        >;
                };


                special_layer {
						label = "SPECIAL";
                        bindings = <
   	//,-----------------------------------------------------------------.                        ,-----------------------------------------------------------------.
		   &trans     &trans	 &trans 	&trans 	   &trans  &kp PSCRN   			  &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &kp C_VOL_DN &kp C_VOL_UP
	//|----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
		    &trans 	  &trans   &kp HOME  &kp PG_DN 	&kp PG_UP 	 &kp END   	 					  	  &trans 	 &trans  	&trans     &trans &kp C_NEXT &kp C_PREV
	//|----------+----------+----------+----------+----------+----------|                        |----------+----------+----------+----------+----------+----------|
   		    &trans    &trans 	 &trans 	&trans 	   &trans 	  &trans   						  &bt BT_CLR   &mkp MB1   &mkp MB2 	   &trans &kp C_MUTE   &kp C_PP
	//|----------+----------+----------+----------+----------+----------+----------|  |----------+----------+----------+----------+----------+----------+----------|
                  								   	&kp LSHFT      &none  &kp SPACE   	&kp ENTER 	   &none   &kp RALT
												//`--------------------------------'  `--------------------------------'
                        >;
                };
        };
};
